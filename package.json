{
  "name": "optimisation-workshop",
  "version": "1.0.0",
  "description": "Serveur monolithique Express pour atelier d'optimisation et migration microservices",
  "main": "monolith-server.ts",
  "scripts": {
    "start": "ts-node monolith-server.ts",
    "dev": "nodemon --watch . --exec ts-node monolith-server.ts",
    "dev:account": "nodemon --watch . --exec ts-node ./services/account-service/index.ts",
    "benchmark": "ts-node benchmark.ts -- -c 1000 -t 2000"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
